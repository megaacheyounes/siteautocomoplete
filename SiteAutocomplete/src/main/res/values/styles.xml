<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="theme_fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
         <item name="android:textColorSecondary">@color/textSecondary</item>

    </style>

    <style name="theme_overlay" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="dialogPreferredPadding">16dp</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
    </style>


</resources>